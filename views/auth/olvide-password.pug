extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-light_blue Bienes 
            span.font-normal.text-pink Raíces  
        h2.text-center.text-2xl.font-extrabold.text-black= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow.rounded-lg.border.border-light_blue
                form.space-y-5(method="POST" action="/auth/olvide-password" novalidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe tu email" type="email" name="email") 
                    div.flex.items-center.justify-between 
                        a.text-light_blue.text-xs(href="/auth/registro" class="hover:underline decoration-2 hover:decoration-red") ¿No tienes cuenta? Crea una
                        a.text-light_blue.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-red") ¿Ya tienes cuenta? Inicia Sesión

                    input(class="w-full bg-light_blue hover:bg-greenish text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar instrucciones")
