extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10 text-light_blue")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-pink hover:bg-greenish text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

    pre= JSON.stringify(propiedad,undefined,2)

    div(class="mx-auto max-w-4xl bg-light_blue shadow border border-light_blue")
        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-light_blue border-b p-5 flex items-center gap-4")
                        if mensaje.usuario.foto
                            img(src=`/uploads/${mensaje.usuario.foto}`, alt="Foto de perfil" class="w-16 h-16 rounded-full")
                        else
                            img(src="/path/to/default-image.jpg", alt="Foto por defecto" class="w-16 h-16 rounded-full")

                        div
                            p(class="font-bold text-black") Nombre: 
                                span(class="font-normal")= mensaje.usuario.nombre

                            p(class="font-bold text-black") Email: 
                                span(class="font-normal")= mensaje.usuario.email    

                            p(class="font-bold text-black") Mensaje: 
                                span(class="font-normal")= mensaje.mensaje

                            p(class="font-bold text-black") Enviado: 
                                span(class="font-normal")= formatearFecha( mensaje.createdAt )       
        else 
            p(class="text-center text-gray-600 p-5") No hay Mensajes
